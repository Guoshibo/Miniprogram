.mine{
  width:100%;
  /* height:50vh; */
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  box-sizing:border-box;
  padding:0 5px;
}
.mine>.user{
  text-align:center;
}
.mine .avatar {
  overflow: hidden;
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.mine .name {
  width: 100%;
  font-size: 36rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  color: #333;
}

.content {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 15px;
  box-sizing: border-box;
  color: #999;
  border-top: 1px solid #ccc;
  display: flex;
  flex-wrap: wrap;
}
.content .list {
  width: 50%;
}
.content .list::after {
  content: "";
  display: block;
  height: 1px;
  width: 90%;
  border-bottom: 1px solid #ccc;
}
.content image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.content .list text {
  display: inline-block;
  font-size: 32rpx;
  padding: 30rpx 0 15rpx 0;
  box-sizing: border-box;
  padding-right: 135rpx;
}

.develop{
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 20px;
  box-sizing: border-box;
  color: #999;
  /* border-top: 1px solid #ccc; */
  display: flex;
  flex-wrap: wrap;
}
.develop .diary{
  width:100%;
  height:50px;
  color:#fdcb6e;
}



