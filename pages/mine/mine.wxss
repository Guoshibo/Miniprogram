.mine {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}
.mine .user{
  text-align: center;
  margin-bottom: 5px;
}
.mine .user .name {
  width: 100%;
  font-size: 36rpx;
  box-sizing: border-box;
  color: #333;
}
.mine .user .avatar {
  overflow: hidden;
  display: block;
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
}
.mine .content{
  padding: 20px;
  width: 100%;
  text-align: center;
  line-height:0%;
  font-size: 36px;
  color: orange;
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}
.mine .content image {
  width: 80rpx;
  height: 80rpx;
  float: left;
}
.mine .content .res{
  float: right;
  margin-top: 20px;
}
.mine .divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
}


