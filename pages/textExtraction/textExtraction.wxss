/* pages/textExtraction/textExtraction.wxss */
.textExtraction{
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background-image: url('../../static/8.jpg');
}
.textExtraction .upload{
  width: 100%;
  height: 400rpx;
  position: relative;
  border: 1px solid #ccc;
  border-radius: 24rpx;
}
.textExtraction .photo{
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 100rpx;
  left: 36%;
  /* background:#e98d3f; */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.textExtraction .photo image{
  width: 100rpx;
  height: 100rpx;
}
.textExtraction .upBtn{
  width: 260rpx;
  font-size: 32rpx;
  padding: 0;
  margin: 40rpx auto;
}
.textExtraction .wordInfo{
  margin-top: 10rpx;
}
.textExtraction .wordInfo .title{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
}
.textExtraction .wordInfo .title text{
  font-size: 36rpx;
}
.textExtraction .wordInfo .title .copy{
  font-size: 30rpx;
  margin-right: 20rpx;
}
.textExtraction .wordInfo .title image{
  width: 60rpx;
  height: 40rpx;
  margin-right: 10rpx;
}